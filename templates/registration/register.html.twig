{% extends 'template.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="page-title my-3">
        <h1>S'inscrire</h1>
    </div>
    <div class="container">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.lastname, {
                label: 'Nom'
            }) }}
            {{ form_row(registrationForm.firstname, {
                label: 'Pr√©nom'
            }) }}
            {{ form_row(registrationForm.adress, {
                label: 'Adresse'
            }) }}
            {{ form_row(registrationForm.city_code, {
                label: 'Code postal'
            }) }}
            {{ form_row(registrationForm.city, {
                label: 'Ville'
            }) }}
            {{ form_row(registrationForm.sex, {
                label: 'Genre'
            }) }}
            {{ form_row(registrationForm.birthdate, {
                label: 'Date de naissance'
            }) }}


            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Accepter les conditions'
            }) }}

            <button type="submit" class="btn btn-dark text-white">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
